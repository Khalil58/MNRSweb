<button onclick="showMessage()">Click to Reveal Love Notes üíñ</button>

<script>
    let index = 0;
    function showMessage() {
        const messages = document.querySelectorAll('.message');
        if (index < messages.length) {
            messages[index].style.display = 'block';
            index++;
        }
    }
</script>
